image {
  font-size: 0;
  padding: 0;
  margin: 0;
  width: 50rpx;
  height: 50rpx;
}

button {
  padding: 0;
  margin: 0;
}

page {
  font-family: "Microsoft YaHei", 微软雅黑, "Microsoft JhengHei", 华文细黑, STHeiti, MingLiu;
  background: #ebebeb;
  font-size: 34rpx;
  color: #2f2f2f;
}

/*------------------common-------------------------------  */

.flex {
  display: flex;
}

.tc {
  text-align: center;
}

.border {
  box-shadow: 0 0 4px #bebebe;
}

.textHide {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.show {
  display: block;
}

.hide {
  display: none;
}

.flexShow {
  display: flex;
}

.modal {
  position: fixed;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.5;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 9;
}

