image {
  font-size: 0;
  padding: 0;
  margin: 0;
  width: 50rpx;
  height: 50rpx;
}

button {
  padding: 0;
  margin: 0;
}

page {
  font-family: "Microsoft YaHei", 微软雅黑, "Microsoft JhengHei", 华文细黑, STHeiti, MingLiu;
  background: #ebebeb;
  font-size: 34rpx;
  color: #2f2f2f;
}

/*------------------common-------------------------------  */

.flex {
  display: flex;
}

.pd27 {
  padding: 0 27rpx;
}

.black {
  color: #2f2f2f;
}

.grey {
  color: #848484;
}

.white {
  color: #f7f7f7;
}

.orange {
  color: #ca831d;
}

.bg_orange {
  background: #ca831d;
}

.bg_white {
  background: #f7f7f7;
}

.bg_grey {
  background: #ebebeb;
}

.tc {
  text-align: center;
}

.border {
  box-shadow: 0 0 4px #bebebe;
}

.textHide {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.show {
  display: block;
}

.hide {
  display: none;
}

.flexShow {
  display: flex;
}

/*-----------------帖子---------------------------  */

.postsTitle {
  /* align-items: center; */
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.postsTitle .label {
  width: 80rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  background: #d32a0e;
  color: white;
  border-radius: 4rpx;
  margin-right: 15rpx;
  font-size: 24rpx;
  /* padding: 10rpx; */
  white-space: nowrap;
}

.postsTitle .title {
  width: 650rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 36rpx;
  color: #3c3534;
  display: flex;
  align-items: center;
}

/*---------------没有更多提示-----------------------  */

.loadAll {
  border-top: 1px solid #e2e2e2;
  padding: 26rpx 0ex;
  font-size: 30rpx;
  color: #bebebe;
  text-align: center;
}

/*---------------用户信息---------------------  */

.dd {
  width: 160rpx;
  height: 82rpx;
  background: url(https://forum.sanguosha.com/static/image/dd_bg.png) no-repeat;
  background-size: 100% 100%;
