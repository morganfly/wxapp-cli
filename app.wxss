  width: 698rpx;
  height: 2rpx;
  margin: 0 auto;
  background: #e2e2e2;
}

/*-----------------modal---------------------------  */

.modal {
  position: fixed;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.5;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 9;
}

/*-----------------发表话题--------------------------------  */

publishbtn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 999;
}
