.banner {
  width: 100%;
  height: 324rpx;
  background: brown;
  font-size: 0;
}

.tabTitle {
  width: 100%;
}

.tabTitle .titleItem {
  width: 33.3%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  background: white;
  border-bottom: 2rpx solid #ebebeb;
}

.tabTitle .checked {
  color: #24c120;
  border-bottom: 2rpx solid #24c120;
}

.txt {
  padding: 14rpx 30rpx;
  font-size: 28rpx;
  color: #2f2f2f;
  background: #ebebeb;
}

.topic {
  justify-content: space-between;
  background: white;
  padding: 0 27rpx;
  width: 700rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #ddd;
  align-items: center;
}

.topic .rankNum {
  font-size: 28rpx;
  color: #dc9d15;
  padding-right: 8rpx;
}

.topic .title {
  font-size: 32rpx;
}

.topic .right {
  align-items: centers;
}

.topic .iconFire {
  width: 30rpx;
  height: 44rpx;
  padding-right: 14rpx;
  padding-top: 14rpx;
}

.user {
  padding: 22rpx 26rpx;
  background: white;
  justify-content: space-between;
  border-bottom: 2rpx solid #ddd;
}

.avatarFrame {
  position: relative;
  width: 88rpx;
  height: 88rpx;
}

.avatarFrame .avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.avatarFrame .rankNum {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: #dc9d15;
  line-height: 36rpx;
  position: absolute;
  left: 50%;
  bottom: 0;
  text-align: center;
  color: white;
  font-size: 28rpx;
  transform: translate(-50%, 50%);
}

.midContent .nickName {
  font-size: 32rpx;
  padding-bottom: 8rpx;
}

.midContent .office {
  color: #848484;
  font-size: 28rpx;
}

.midContent .data {
  color: #848484;
  font-size: 28rpx;
}

.user .btn {
  width: 128rpx;
  height: 54rpx;
  line-height: 54rpx;
  background: #2ac31a;
  color: white;
  border-radius: 8rpx;
  text-align: center;
  font-size: 26rpx;
  margin-top: 32rpx;
}
