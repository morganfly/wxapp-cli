.header {
  /* align-items: center; */
  justify-content: space-between;
  padding: 30rpx 27rpx;
  background: #f7f7f7;
  color: #848484;
  padding-bottom: 15rpx;
}

.flex {
  display: flex;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  display: block;
}

.downArrow {
  width: 27rpx;
  height: 14rpx;
  margin-top: 13rpx;
}

.info {
  font-size: 28rpx;
  width: 460rpx;
  align-items: center;
  color: #848484;
}

.info .nickName, info .guanjie {
  height: 44rpx;
  align-items: center;
}

.info .leftWidth {
  width: 60rpx;
  display: inline-block;
  text-align: justify;
  height: 34rpx;
}

.info .leftWidth::after {
  content: " ";
  display: inline-block;
  width: 100%;
}

.level {
  width: 42rpx;
  height: 42rpx;
  line-height: 42rpx;
  display: inline-block;
  text-align: center;
  color: #ac580d;
  font-size: 28rpx;
  margin-left: 10rpx;
  background: url('https://forum.hzyoka.com/static/image/level.png') no-repeat;
  background-size:cover;
}

.info .f26 {
  font-size: 30rpx;
  padding-left: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.info .downArrow {
  width: 27rpx;
  height: 14rpx;
  margin-left: 15rpx;
}

.options {
  width: 20rpx;
}

.optionsFrame {
  position: absolute;
  background: white;
  padding: 10rpx;
  right: 131rpx;
  top: 70rpx;
}

.options_item {
  padding: 10rpx;
  border-bottom: 1px solid #e2e2e2;
}

.role {
  background: #f67f3e;
  padding: 0 10rpx;
  color: white;
  border-radius: 4rpx;
  margin-left: 10rpx;
  font-size: 20rpx;
}
