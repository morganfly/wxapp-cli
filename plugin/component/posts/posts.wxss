/* plugin/component/posts/post.wxss */
@import '/app.wxss';

.activityHeader {
  padding: 16rpx 26rpx;
  border-bottom: 2rpx solid #e2e2e2;
  align-items: center;
  padding-top: 0;
  margin-bottom: 25rpx;
}

.activityHeader .icon_activity {
  width: 23rpx;
  height: 23rpx;
  margin-right: 14rpx;
}

.activityHeader veiw {
  font-size: 28rpx;
  color: #848484;
}

.postsHeader {
  justify-content: space-between;
}

.postsHeader .part_left {
  align-items: center;
}

.postsHeader .avatar {
  border-radius: 50%;
  width: 66rpx;
  height: 66rpx;
  margin-right: 17rpx;
}

.postsHeader .nick_name {
  font-size: 30rpx;
  color: #3c3534;
  align-items: center;
}

.postsHeader .level {
  width: 43rpx;
  height: 46rpx;
  line-height: 44rpx;
  display: inline-block;
  text-align: center;
  color: #ac580d;
  font-size: 28rpx;
  margin-left: 10rpx;
  margin-top: 5rpx;
  background: url('https://forum.hzyoka.com/static/image/level.png') no-repeat;
  /* background-size: cover; */
  background-size: 100% 100%;
}

.postsHeader .official {
  color: #848484;
}

.postsHeader .part_right {
  position: relative;
}

.flex {
  display: flex;
}

.posts {
  padding: 25rpx 30rpx;
  background: #f7f7f7;
  font-size: 28rpx;
  color: #848484;
  margin-bottom: 15rpx;
}

.postsTitle {
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
}

.markIcon {
  width: 32rpx;
  height: 30rpx;
}

.closeIcon {
  width: 33rpx;
  height: 34rpx;
  margin-left: 10rpx;
}

.postsTitle .label {
  width: 58rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  color: white;
  border-radius: 4rpx;
  margin-right: 15rpx;
}

.postsTitle .label1 {
  background: #d32a0e;
}

.postsTitle .label2 {
  background: #f18f3f;
}

.postsTitle .label3 {
  background: #f69d9e;
}

.postsTitle .label4 {
  background: #31a7e2;
}

.postsTitle .title {
  font-size: 32rpx;
  color: #3c3534;
  align-items: center;
}

.postsTitle .title span {
  display: inline-block;
  max-width: 600rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding-right: 10rpx;
}

.postsContent .text {
  display: block;
  width: 670rpx;
  overflow: hidden;
}

.postsContent .pic {
  display: block;
  width: 168rpx;
  height: 168rpx;
  margin-right: 15rpx;
  position: relative;
  margin-top: 20rpx;
}

.postsContent .picNum {
  width: 70rpx;
  height: 40rpx;
  color: white;
  background: rgba(0, 0, 0, 0.8);
  text-align: center;
  line-height: 40rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 24rpx;
  border-radius: 4rpx;
}

.feedback {
  justify-content: space-between;
}

.feedbackItem {
  align-items: center;
  font-size: 24rpx;
  padding: 24rpx;
  padding-bottom: 0;
  color: #bebebe;
}

.feedback image {
  margin-right: 10rpx;
}

.feedback .address {
  background: transparent;
  color: #bebebe;
  font-size: 28rpx;
}

.feedback .address::after {
  border: none;
}

.feedback .icon_address {
  width: 35rpx;
  height: 30rpx;
}

.feedback .icon_praise {
  width: 29rpx;
  height: 29rpx;
}

.feedback .icon_reply {
  width: 34rpx;
  height: 29rpx;
}

/*---------------------在个人中心页面被引用时的一些修正------------------  */

.isMy1 {
  margin: 0;
  border-bottom: 1px solid #e2e2e2;
}

.isMy2 {
  display: none;
}

/*---------------------------------------------------------------------  */

.posts_edit {
  position: absolute;
  right: 0;
  top: 0;
}

.role {
  background: #f67f3e;
  padding: 0 10rpx;
  color: white;
  border-radius: 4rpx;
  margin-left: 10rpx;
  font-size: 20rpx;
}
